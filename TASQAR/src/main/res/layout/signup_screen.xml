<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SU_Screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/SU_ProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="false"
        android:rotation="-90"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/SU_DetailsScreen"
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/SU_ProfilePic">

        <TextView
            android:id="@+id/SU_RoleText"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:gravity="bottom"
            android:text="Role"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_PhoneText" />

        <TextView
            android:id="@+id/SI_NameText"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="32dp"
            android:gravity="bottom"
            android:text="Name"
            android:textAlignment="textEnd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_ProfilePic" />

        <EditText
            android:id="@+id/SU_EmailField"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/SU_EmailText"
            app:layout_constraintTop_toBottomOf="@+id/SU_NameField" />

        <ImageView
            android:id="@+id/SU_PhoneErrorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SU_PhoneNoField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SU_PhoneNoField"
            app:layout_constraintTop_toTopOf="@+id/SU_PhoneNoField"
            app:srcCompat="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/SU_HeirarchyText"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:gravity="bottom"
            android:text="Hierarchy"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_RoleText" />

        <EditText
            android:id="@+id/SU_PhoneNoField"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Phone no."
            android:inputType="textPersonName"
            android:phoneNumber="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.155"
            app:layout_constraintStart_toEndOf="@+id/SU_PhoneText"
            app:layout_constraintTop_toBottomOf="@+id/SU_EmailField" />

        <ImageView
            android:id="@+id/SU_NameErrorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SU_NameField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/SU_NameField"
            app:layout_constraintTop_toTopOf="@+id/SU_NameField"
            app:srcCompat="@android:drawable/btn_dialog" />

        <Button
            android:id="@+id/SU_NextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="NEXT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_HeirarchyField" />

        <EditText
            android:id="@+id/SU_RoleField"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Role/Designation"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/SU_RoleText"
            app:layout_constraintTop_toBottomOf="@+id/SU_PhoneNoField" />

        <ImageView
            android:id="@+id/SU_EmailErrorImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SU_EmailField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/SU_EmailField"
            app:layout_constraintTop_toTopOf="@+id/SU_EmailField"
            app:srcCompat="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/SU_EmailText"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:gravity="bottom"
            android:text="Email"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SI_NameText" />

        <EditText
            android:id="@+id/SU_NameField"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/SI_NameText"
            app:layout_constraintTop_toBottomOf="@+id/SU_ProfilePic" />

        <TextView
            android:id="@+id/SU_PhoneText"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="12dp"
            android:gravity="bottom"
            android:text="Phone"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_EmailText" />

        <EditText
            android:id="@+id/SU_HeirarchyField"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="Hierarchy"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/SU_HeirarchyText"
            app:layout_constraintTop_toBottomOf="@+id/SU_RoleField" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/SU_PasswordScreen"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/SU_ProfilePic">

        <ImageView
            android:id="@+id/SU_ReEnterError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SU_ReEnterField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SU_ReEnterField"
            app:layout_constraintTop_toTopOf="@+id/SU_ReEnterField"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/SU_PasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SU_PasswordField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SU_PasswordField"
            app:layout_constraintTop_toTopOf="@+id/SU_PasswordField"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/SU_OTPError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/SU_OTPField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SU_OTPField"
            app:layout_constraintTop_toTopOf="@+id/SU_OTPField"
            app:srcCompat="@android:drawable/btn_dialog" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="OTP"
            app:layout_constraintEnd_toStartOf="@+id/SU_OTPField"
            app:layout_constraintTop_toTopOf="@+id/SU_OTPField" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Password"
            app:layout_constraintEnd_toStartOf="@+id/SU_PasswordField"
            app:layout_constraintTop_toTopOf="@+id/SU_PasswordField" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="Re-Enter"
            app:layout_constraintEnd_toStartOf="@+id/SU_ReEnterField"
            app:layout_constraintTop_toTopOf="@+id/SU_ReEnterField" />

        <EditText
            android:id="@+id/SU_OTPField"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="OTP"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/SU_PasswordField"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:password="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_OTPField" />

        <EditText
            android:id="@+id/SU_ReEnterField"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPersonName"
            android:password="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_PasswordField" />

        <Button
            android:id="@+id/SU_SubmitPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SU_ReEnterField" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>