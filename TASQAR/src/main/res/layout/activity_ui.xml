<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PostLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar">


    <Button
        android:id="@+id/pointorplanebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PP"
        app:layout_constraintBaseline_toBaselineOf="@+id/UserName"
        app:layout_constraintBottom_toBottomOf="@+id/UserName"
        app:layout_constraintStart_toEndOf="@+id/button"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="0dp" />

    <android.opengl.GLSurfaceView
        android:id="@+id/glsurfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg" />

    <RelativeLayout
        android:id="@+id/RenderHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/currentLayout"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true">

            <com.flashphoner.wcsexample.video_chat.SurfaceViewRendererCustom
                android:id="@+id/CurrentRender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/streamLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.flashphoner.wcsexample.video_chat.SurfaceViewRendererCustom
                android:id="@+id/StreamRender"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/FloatingButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@android:color/holo_purple"
            app:srcCompat="@drawable/baseline_add_white_24dp" />

        <LinearLayout
            android:id="@+id/ButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton4"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/CallExpertLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/floatingActionButton4"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/callExpertView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Call Technician"
                    android:textColor="@android:color/background_light" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/CallExpertButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    app:layout_constraintBottom_toTopOf="@+id/floatingActionButton4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@android:color/holo_purple"
                    app:srcCompat="@drawable/baseline_call_white_24dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ToggleDrawingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/SwitchLayoutLayout"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/ToggleDrawingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Toggle Drawing Mode"
                    android:textColor="@android:color/background_light" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/DrawingModeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    app:rippleColor="@android:color/holo_purple"
                    app:srcCompat="@drawable/baseline_gesture_white_18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/SwitchCameraLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SwitchCameraText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Switch Camera"
                    android:textColor="@android:color/background_light" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/SwitchCamButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    app:rippleColor="@android:color/holo_purple"
                    app:srcCompat="@drawable/flip_cam_rear" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/SwitchLayoutLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/UploadFileLayout"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/switchLayoutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Switch Layouts"
                    android:textColor="@android:color/background_light" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/SwitchLayoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    app:rippleColor="@android:color/holo_purple"
                    app:srcCompat="@drawable/baseline_cached_white_18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/UploadFileLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/CallExpertLayout"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/uploadFileView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="Upload File"
                    android:textColor="@android:color/background_light" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/UploadFileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    app:backgroundTint="@android:color/holo_blue_dark"
                    app:layout_constraintBottom_toTopOf="@+id/floatingActionButton4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:rippleColor="@android:color/holo_purple"
                    app:srcCompat="@drawable/baseline_cloud_upload_white_24dp" />

            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/EndCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/call_end" />

</android.support.constraint.ConstraintLayout>